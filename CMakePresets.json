{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "cacheVariables": {
        "SKSE_SUPPORT_XBYAK": "ON",
        "CMAKE_BUILD_TYPE": "Release"
      },
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "STRING",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_OVERLAY_PORTS": {
          "type": "STRING",
          "value": "${sourceDir}/cmake/ports/"
        },
        "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL",
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/permissive- /Zc:preprocessor /EHsc /MP /W4 /external:anglebrackets /external:W0 /bigobj"
      },
      "generator": "Visual Studio 17 2022",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64",
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    },

    {
      "name": "runtimes-ng",
      "hidden": true
    },
    {
      "name": "runtimes-vr",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SKYRIM_AE": "OFF",
        "ENABLE_SKYRIM_SE": "OFF"
      }
    },
    {
      "name": "runtimes-flatrim",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SKYRIM_VR": "OFF"
      }
    },
    {
      "name": "runtimes-se",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SKYRIM_AE": "OFF",
        "ENABLE_SKYRIM_VR": "OFF"
      }
    },
    {
      "name": "runtimes-ae",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SKYRIM_SE": "OFF",
        "ENABLE_SKYRIM_VR": "OFF"
      }
    },
    {
      "name": "runtimes-pre-ae",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_SKYRIM_AE": "OFF"
      }
    },
    {
      "name": "AE",
      "hidden": true,
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc",
        "runtimes-ae"
      ]
    },
    {
      "name": "SE",
      "hidden": true,
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc",
        "runtimes-se"
      ]
    },
    {
      "name": "VR",
      "hidden": true,
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc",
        "runtimes-vr"
      ]
    },
    {
      "name": "NG",
      "hidden": true,
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc",
        "runtimes-ng"
      ]
    },
    {
      "name": "PRE-AE",
      "hidden": true,
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc",
        "runtimes-pre-ae"
      ]
    },
    {
      "name": "FLATRIM",
      "hidden": true,
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc",
        "runtimes-flatrim"
      ]
    },
    {
      "name": "Release",
      "inherits": [
        "common",
        "vcpkg",
        "x64",
        "msvc"
      ]
    }
  ]
}
